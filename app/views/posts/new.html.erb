<div class="form-wrap">
  <h1 class="form-title">Create a new post</h1>

  <%= form_with model: @post do |p| %>
    <div class="field">

      <%= p.text_field :title, placeholder: 'Title', class: 'title input' %>
    </div>
    <div class="field">

      <%= p.text_area :description, placeholder: 'Description', class: 'description input' %>
    </div>
    <div class="field field-flex">
      <div class="sub-field cut-width">

        <%= p.file_field :image, class: 'image' %>
      </div>
      <div class="sub-field">
        <%= p.label :goal, "Set paws goal" %>
        <%= p.text_field :goal, class: 'goal input-field' %>
      </div>

      <div class="sub-field">
        <%= p.label :category_id %>
        <%= p.select(:category_id, @category_options,{}, class: 'input-field') %>
      </div>
      <div class="sub-field submit">
        <%= p.submit 'Create post', class: 'submit-input' %>
      </div>

    </div>






  <% end %>

</div>
