<h1>Create a new post</h1>

<%= form_with model: @post do |p| %>
  <div class="field">
    <%= p.label :title %>
    <%= p.text_field :title %>
  </div>
  <div class="field">
    <%= p.label :description %>
    <%= p.text_field :description %>
  </div>
  <div class="field">
    <%= p.label :goal, "Set paws goal" %>
    <%= p.text_field :goal %>
  </div>
  <div class="field">
    <%= p.label :image %>
    <%= p.file_field :image %>
  </div>

  <div class="field">
    <%= p.label :category_id %>
    <%= p.select(:category_id, @category_options) %>
  </div>

  <%= p.submit 'Create post' %>


<% end %>
