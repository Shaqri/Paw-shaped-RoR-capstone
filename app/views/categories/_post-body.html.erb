
<div class="content">
  <div class="category">
      <span class="category-name"><%= post.category.name %></span>
  </div>
  <div class="title">
      <span><%= link_to post.title, post_path(post) %></span>
  </div>

  <div class="description">
    <span><%= post.description %></span>
  </div>
  <div class="user">
    <span>- </span>
    <span class="user-name"><%= post.user.name %></span>
  </div>
  <div class="goal">
  <% if post.goal > 0 %>

      <div class="set-goal">
        <div class="">
          <span>Goal:</span>
        </div>

          <span><%= post.goal %></span>
          <span> Paws left</span>


      </div>

  <% end %>
  <% if current_user %>
  <%= render '/posts/interaction', post: post %>
  <% end %>
    </div>




</div>
