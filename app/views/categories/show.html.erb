

<ul class="posts">
  <% @posts.each do |post| %>

    <li class="post">
      <% if revert(@posts.size) < 4 %>
        <%= render 'post-image', post: post %>
        <%= render 'post-body', post: post %>
        <% else %>
        <%= render 'post-body', post: post %>
        <%= render 'post-image', post: post %>
      <% end %>

    </li>
  <% end %>
</ul>
